<h1>Listing Lambda Instances</h1>

<p> Total Pages {{pagedContent.totalPages}} </p>

<table>
  <td>id</td>
  <td>name</td>
  <td>actions</td>
{{#each pagedContent as |lambda-instance|}}
<tr class="instance-info">
  <td>{{lambda-instance.uuid}}</td>
  <td>{{lambda-instance.name}}</td>
  <td>{{lambda-instance.status}}</td>
  {{#if lambda-instance.failure_message}}
    <td>{{lambda-instance.failure_message}}</td>
  {{/if}}
  <td>
    <button name="del-btn" id="del-btn" class="action-btn" {{action 'delete' lambda-instance}}>Delete</button>
  </td>
</tr>
{{else}}
  No lambda instances under ownership.
{{/each}}

{{page-numbers content=pagedContent currentPage=page totalPages=totalPages showFL=true}}
</table>
